<SettingsFlyout
    x:Class="VariableSizedGridViewSample.Views.AboutFlyout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VariableSizedGridViewSample.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    IconSource="Assets/SmallLogo.png"
    Title="このアプリについて"
    d:DesignWidth="346">

    <!-- この StackPanel はコンテンツ セクションの垂直レイアウト用のルート パネルとして機能します -->
    <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >

        <!-- 以下の StackPanel では個々のコンテンツ セクションを定義します -->

        <!-- コンテンツ セクション 1-->
        <StackPanel Style="{StaticResource SettingsFlyoutSectionStyle}">

            <!-- セクション 1 ヘッダー -->
            <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Variable Sized GridView Sample" />

            <!-- セクション 1 ボディ -->
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Margin="0,10,0,25" TextWrapping="Wrap" FontFamily="Global User Interface">
                <Run Text="このサンプルアプリでは、"/>
                <Run Text="「frickr」 に投稿されている猫の写真を、" FontFamily="Global User Interface"/>
                <Run Text="掲載元サイトが提供するAPIを利用して検索し表示しています。" FontFamily="Global User Interface"/>
            </TextBlock>

        </StackPanel>

        <!-- 必要に応じてコンテンツ セクションを以下でさらに定義します -->

    </StackPanel>
</SettingsFlyout>
